= form_for @contact, :html => { :class => "form-horizontal contact" } do |f|
  - if @contact.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@contact.errors.count, "error")
          prohibited this contact from being saved:
      .panel-body
        %ul
          - @contact.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label :name, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, :class => 'form-control'
    = f.error_span(:name)
  .form-group
    = f.label :email, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :email, :class => 'form-control'
    = f.error_span(:email)
  .form-group
    = f.label :phone, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :phone, :class => 'form-control'
    = f.error_span(:phone)
  .form-group
    = f.label :address, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :address, :class => 'form-control'
    = f.error_span(:address)
  .form-group
    = f.label :company, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :company, :class => 'form-control'
    = f.error_span(:company)
  .form-group
    = f.label :birthday, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :birthday, :class => 'form-control', data: {provide: 'datepicker'}
    = f.error_span(:birthday)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        contacts_path, :class => 'btn btn-default'                   |




