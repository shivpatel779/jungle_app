- model_class = Contact
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
  %dd= @contact.name
  %dt
    %strong
      = model_class.human_attribute_name(:email)
  %dd= @contact.email
  %dt
    %strong
      = model_class.human_attribute_name(:phone)
      
  %dd= @contact.phone
  %dt
    %strong
      = model_class.human_attribute_name(:address)
      
  %dd= @contact.address
  %dt
    %strong
      = model_class.human_attribute_name(:company)
      
  %dd= @contact.company
  %dt
    %strong
      = model_class.human_attribute_name(:birthday)
      
  %dd= @contact.birthday
= link_to t('.back', :default => t("helpers.links.back")), 
  contacts_path, :class => 'btn btn-default'               
= link_to t('.edit', :default => t("helpers.links.edit")), 
  edit_contact_path(@contact), :class => 'btn btn-default' 
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               
  contact_path(@contact),                                                                                      
  :method => 'delete',                                                                                         
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, 
  :class => 'btn btn-danger'                                                                                   
